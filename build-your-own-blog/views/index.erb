
<h3>Recent Posts:</h3>

<div class="row">
    <% @selected_pages.each do |page| %>
      <div class="blog-post">
        <h2 class="blog-post-title"><%= page.header %></h2>
        <p class="blog-post-meta"><%= page.article %></p>
        <h6>Posted at: <%= page.created_at.strftime("%b. %d, %Y, (%H:%M)")%></h6>
      </div>
    <% end %>
</div>
